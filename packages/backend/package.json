{
  "name": "@vsp/backend",
  "version": "1.0.0",
  "description": "Backend for the Virtual Storytelling Project",
  "main": "main.js",
  "repository": "https://github.com/richdouglasevans/vsp.git",
  "private": true,
  "license": "CC0-1.0",
  "scripts": {
    "build": "yarn cc:compile",
    "cc:compile": "yarn nearleyc ./src/stories/format/grammar.ne -o ./src/stories/format/grammar.js",
    "db:up": "node run-db-migrate.js -- up",
    "db:up:test": "node run-db-migrate.js -- up:test",
    "db:down": "node run-db-migrate.js -- down",
    "db:down:test": "node run-db-migrate.js -- down:test",
    "db:create": "node run-db-migrate.js -- create",
    "prestart": "yarn build && yarn db:up",
    "start": "node ./main.js",
    "pretest": "NODE_ENV=test yarn db:down && yarn db:down:test && yarn db:up && yarn db:up:test",
    "test": "yarn test:unit",
    "test:unit": "NODE_ENV=test jest --group=unit",
    "test:integration": "NODE_ENV=test jest --group=integration",
    "test:all": "yarn test:unit && yarn test:integration"
  },
  "dependencies": {
    "cloudinary": "^1.22.0",
    "config": "^3.3.1",
    "continuation-local-storage": "^3.2.1",
    "db-migrate-pg": "^1.2.2",
    "execa": "^4.0.3",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "helmet": "^3.23.3",
    "http-status-codes": "^1.4.0",
    "minimist": "^1.2.5",
    "multer": "^1.4.2",
    "nearley": "^2.19.6",
    "nunjucks": "^3.2.2",
    "ow": "^0.17.0",
    "pg": "^8.3.0",
    "pino": "^6.4.1",
    "ramda": "^0.27.1",
    "sanctuary": "^3.0.0"
  },
  "devDependencies": {
    "@types/config": "^0.0.36",
    "@types/express": "^4.17.7",
    "@types/helmet": "^0.0.47",
    "@types/http-status-codes": "^1.2.0",
    "@types/pg": "^7.14.4",
    "@types/pino": "^6.3.0",
    "@types/sanctuary": "^3.0.2",
    "@types/supertest": "^2.0.10",
    "db-migrate": "^0.11.11",
    "deep-freeze": "^0.0.1",
    "jest": "^26.4.2",
    "jest-docblock": "^26.0.0",
    "jest-runner": "^26.4.2",
    "jest-runner-groups": "^2.0.1",
    "supertest": "^4.0.2",
    "typescript": "^3.9.7"
  }
}
